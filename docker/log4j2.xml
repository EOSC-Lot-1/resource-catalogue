<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="30" status="INFO">
    <Properties>
        <Property name="baseDir">logs</Property>
        <Property name="app">resource-catalogue</Property>
        <!--
        <Property name="LOG_TRANSACTION">
            %style{%notEmpty{transaction_id=%X{transaction_id}, remote_ip=%X{remote_ip}\n}}{magenta}
        </Property>
        <Property name="LOG_USER">
            %style{%notEmpty{user_info=%X{user_info}\n}}{yellow}
        </Property>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} %highlight{%-5level} [%t] %style{%C}{bright,blue}: %m%n%throwable${sys:LOG_TRANSACTION}${sys:LOG_USER}
        </Property>
        -->
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%t] %-5level %logger{.1} - %msg%n"/>
        </Console>
        <RollingFile name="RollingFile" fileName="${baseDir}/${app}.log" 
                filePattern="${baseDir}/$${date:yyyy-MM}/${app}-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c:%L - %m%n"/>
            <Policies>
                <!--<OnStartupTriggeringPolicy/>-->
                <CronTriggeringPolicy schedule="0 0 0 1 * ?"/>
                <SizeBasedTriggeringPolicy size="40 MB"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${baseDir}" maxDepth="2">
                    <IfFileName glob="*/${app}-*.log.gz"/>
                    <IfLastModified age="180d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
        <RollingFile name="SyncRollingFile" fileName="${baseDir}/sync.log"
                filePattern="${baseDir}/$${date:yyyy-MM}/sync-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c:%L - %m%n"/>
            <Policies>
                <!--<OnStartupTriggeringPolicy/>-->
                <CronTriggeringPolicy schedule="0 0 0 1 * ?"/>
                <SizeBasedTriggeringPolicy size="40 MB"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${baseDir}" maxDepth="2">
                    <IfFileName glob="*/sync-*.log.gz"/>
                    <IfLastModified age="180d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
        <Logger name="org.elasticsearch.client" level="warn">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.springframework" level="warn">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="gr.uoa.di.madgik.service.SynchronizerService" level="info">
            <AppenderRef ref="SyncRollingFile"/>
        </Logger>
    </Loggers>
</Configuration>
